used(X,Y) :- start(X,Y).
used(X,Y) | notUsed(X,Y) :- used(X1,Y1), adj(X1,Y1,X,Y), cell(X,Y,0).

:~ used(X,Y). [1@1]

reachable(X,Y,X1,Y1):- used(X,Y), used(X1,Y1), adj(X,Y,X1,Y1).
reachable(X,Y,X2,Y2):- reachable(X,Y,X1,Y1), adj(X1,Y1,X2,Y2), used(X2,Y2).

isReachable :- start(XS,YS), end(XE,YE), reachable(XS,YS,XE,YE).
:- not isReachable.


